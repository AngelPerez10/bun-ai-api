# ============================================
# AI Service API Keys (REQUIRED)
# ============================================
GROQ_API_KEY=your_groq_api_key_here
CEREBRAS_API_KEY=your_cerebras_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
HF_TOKEN=your_huggingface_token_here

# ============================================
# Server Configuration
# ============================================
PORT=3000
DEBUG=false

# ============================================
# Authentication (for public deployment)
# ============================================
# Set to 'true' to require API keys for /chat endpoint
REQUIRE_AUTH=true

# Master key for managing API keys (generate a secure random string)
# Use this to create/list/revoke user API keys via /admin/keys
MASTER_API_KEY=sk_master_your_secure_random_string_here

# Pre-configured public API keys (comma-separated)
# Users can use these keys immediately without registration
PUBLIC_API_KEYS=sk_public_key1,sk_public_key2,sk_public_key3

# ============================================
# Rate Limiting
# ============================================
# Enable/disable rate limiting
RATE_LIMIT_ENABLED=true

# Maximum requests per window
RATE_LIMIT_MAX=10

# Time window in milliseconds (60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# CORS Configuration
# ============================================
# Allowed origins (comma-separated, use * for all)
CORS_ORIGINS=*
